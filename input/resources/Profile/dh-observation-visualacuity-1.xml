<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="dh-observation-visualacuity-1"/>
  <url value="http://ns.electronichealth.net.au/fhir/StructureDefinition/dh-observation-visualacuity-1"/>
  <version value="0.1.0"/>
  <name value="DHObservationVisualAcuity"/>
  <title value="DH Observation Visual Acuity"/>
  <status value="draft"/>
  <experimental value="true"/>
  <publisher value="Australian Digital Health Agency"/>
  <contact>
    <telecom>
      <system value="email"/>
      <value value="help@digitalhealth.gov.au"/>
    </telecom>
  </contact>
  <description value="Sharpness or acuteness of vision."/>
